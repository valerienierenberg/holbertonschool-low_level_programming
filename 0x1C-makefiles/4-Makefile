# builds an executable named holberton from holberton.c and main.c
CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM= rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)
re:
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c $< -o $@
